@model Itera.Fagdag.November.ViewModels.ProductViewModel

<div class="row">
    @*@Html.Partial("~/Views/ManageProducts/_ManageProducts.cshtml")*@
    <div class="span12">
        <legend>Add a product</legend>
        @using (Html.BeginForm("AddProduct", "ManageProducts", FormMethod.Post, new {enctype = "multipart/form-data"}))
        {
            @Html.ValidationSummary(true)

            <div class="row">
                <div class="span1">
                    @Html.LabelFor(m => m.Name)
                </div>
                <div class="span2.5">
                    @Html.TextBoxFor(m => m.Name)
                </div>
            </div>

            <div class="row">
                <div class="span1">
                    @Html.LabelFor(m => m.Description)
                </div>
                <div class="span2.5">
                    @Html.TextBoxFor(m => m.Description)
                </div>
            </div>
            <div class="row">
                <div class="span1">
                    @Html.LabelFor(m => m.Pages)
                </div>
                <div class="span2.5">
                    @Html.TextBoxFor(m => m.Pages, new {@style = "width:40px"})
                </div>
            </div>
            <div class="row">
                <div class="span1">
                    @Html.LabelFor(m => m.Language)
                </div>
                <div class="span2.5">
                    @Html.TextBoxFor(m => m.Language)
                </div>
            </div>
            <div class="row">
                <div class="span1">
                    @Html.LabelFor(m => m.CoverImageBase)
                </div>
                <div class="span2.5">
                    @Html.TextBoxFor(m => m.CoverImageBase, new { type = "file", accept = "image/jpg,image/png,image/jpeg,image/gif" })
                </div>
                <div>
                    @Html.ValidationMessageFor(m => m.CoverImageBase)
                </div>
            </div>
            <div class="row">
                <div class="span1">
                    <input type="submit" value="Add" class="btn" />
                </div>
            </div>
        }
    </div>
</div>